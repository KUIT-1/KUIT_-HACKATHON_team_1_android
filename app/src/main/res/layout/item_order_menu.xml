<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_starbucks_menu_cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_order_menu_cv"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardCornerRadius="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_order_menu_iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/americano" />
    </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/item_order_menu_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:paddingLeft="10dp"
            android:text="콜드브루"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/item_order_menu_description"
            app:layout_constraintStart_toEndOf="@+id/item_order_menu_cv"/>

        <TextView
            android:id="@+id/item_order_menu_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="시원해요"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/item_order_menu_name_tv"
            app:layout_constraintStart_toStartOf="@id/item_order_menu_name_tv"/>

        <TextView
            android:id="@+id/item_order_menu_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:text="Hot | Tall | 개인컵"
            android:textSize="14sp"
            app:layout_constraintBottom_toBoOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_order_menu_description"
            app:layout_constraintStart_toStartOf="@id/item_order_menu_name_tv"/>
    <TextView
        android:id="@+id/item_order_menu_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="4500"
        android:layout_marginLeft="40dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/item_order_menu_option"
        app:layout_constraintStart_toEndOf="@id/item_order_menu_option"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/item_order_menu_price_tv"
        app:layout_constraintTop_toTopOf="@id/item_order_menu_price_tv"/>
</androidx.constraintlayout.widget.ConstraintLayout>