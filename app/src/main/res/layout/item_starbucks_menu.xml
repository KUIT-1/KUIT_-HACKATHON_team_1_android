<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_starbucks_menu_cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_starbucks_menu_cv"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardCornerRadius="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_starbucks_menu_iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/img" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_starbucks_menu_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingLeft="10dp"
        android:text="콜드브루"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_starbucks_menu_cv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_starbucks_menu_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="시원해요"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/item_starbucks_menu_name_tv"
        app:layout_constraintTop_toBottomOf="@id/item_starbucks_menu_name_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>